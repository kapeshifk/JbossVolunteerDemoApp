<?xml version="1.0" encoding="UTF-8"?>
<!--suppress WebProperties -->
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

  <display-name>Volunteer Practical Java EE</display-name>
  <context-param>
    <param-name>javax.faces.CONFIG_FILES</param-name>
    <param-value>/WEB-INF/jboss-web.xml</param-value>
  </context-param>
  <servlet>
    <servlet-name>Faces Servlet</servlet-name>
    <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <welcome-file-list>
    <welcome-file>/index.html</welcome-file>
  </welcome-file-list>

  <servlet-mapping>
    <servlet-name>javax.ws.rs.core.Application</servlet-name>
    <url-pattern>/rest/*</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>Faces Servlet</servlet-name>
    <url-pattern>*.xhtml</url-pattern>
  </servlet-mapping>

  <session-config>
    <session-timeout>15</session-timeout>
  </session-config>

  <security-role>
    <role-name>admin</role-name>
  </security-role>

  <security-role>
    <role-name>user</role-name>
  </security-role>

  <security-constraint>
    <display-name>Access only for authenticated users</display-name>
    <web-resource-collection>
      <web-resource-name>restricted</web-resource-name>
      <description/>
      <url-pattern>/pages/*</url-pattern>
      <url-pattern>/rest/*</url-pattern>
    </web-resource-collection>

    <auth-constraint>
      <description/>
      <role-name>admin</role-name>
      <role-name>user</role-name>
    </auth-constraint>
  </security-constraint>

  <login-config>
    <auth-method>FORM</auth-method>
    <realm-name>KnysnaPractical</realm-name>
    <form-login-config>
      <form-login-page>/pages/login.jsp</form-login-page>
      <form-error-page>/pages/error.jsp</form-error-page>
    </form-login-config>
  </login-config>
</web-app>